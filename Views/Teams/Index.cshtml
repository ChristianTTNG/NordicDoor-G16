@model IEnumerable<NordicDoorTestingrep.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h1>Teams</h1>

<p>
    <a asp-action="Create">Legg til nytt team</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TeamID">Endre</a> |
                <a asp-action="Details" asp-route-id="@item.TeamID">Mer info</a> |
                <a asp-action="Delete" asp-route-id="@item.TeamID">Slett</a>
            </td>
        </tr>
}
    </tbody>
</table>
