<h1 class="overskrift, minefoslagcontainerchild d-flex flex-column  justify-content-center align-items-center">FORSLAG</h1>

<div class="forslagside, indexparentbox">


    <!-- her kan man sortere info -->
    <div class="navbarforslag1">

        <div> </div>

        <div class="boxavmineforslagliste, forslagtittel">
            <h3>Status</h3>

        </div>
        <div class="boxavmineforslagliste, forslagtittel">
            <h3>Tittel</h3>

        </div>
        <div class="boxavmineforslagliste, forslagtittel">
            <h3>Brukernavn</h3>

        </div>

        
        <div class="boxavmineforslagliste, forslagtittel">
            <h3>Kategori</h3>

        </div>
        <div> </div>
        <div> </div>


    </div>
    <!-- --------------------------------- -->

    @foreach (var item in Model) {

        <div class="boxavmineforslag" >

            <!-- Status av forslag -->
            <div class="boxavmineforslagliste" class="statusforslag">
                <h5>@Html.DisplayFor(modelItem => item.SugStatus)</h5>
            </div>
            <!-- Forslag Navn og info -->
            <div class="boxavmineforslagliste" id="forslaglistee">

                <p class="forslagnavn">@Html.DisplayFor(modelItem => item.SugName)</p>
            </div>
            <div class="boxavmineforslagliste" class="userlist">
                <h5>@Html.DisplayFor(modelItem => item.ResponsibleEmployee.EmpName)</h5>
            </div>
            <div class="boxavmineforslagliste" class="typelisteforslag">
                <h6>@Html.DisplayFor(modelItem => item.SugCategory)</h6>
            </div>
            
            <div>
                <a asp-action="Edit" asp-route-id="@item.SuggestionId">Endre</a> |
                <a asp-action="Details" asp-route-id="@item.SuggestionId">Mer info</a> |
                <a asp-action="Delete" asp-route-id="@item.SuggestionId">Slett</a>
            </div>
        </div>
    } 






</div>

</div>